{
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "lint": "oxlint --type-aware --type-check",
    "lint:fix": "oxlint --fix",
    "fmt": "oxfmt",
    "fmt:check": "oxfmt --check"
  },
  "devDependencies": {
    "@typescript/native-preview": "7.0.0-dev.20260115.1",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.24.0",
    "oxlint": "^1.39.0",
    "oxlint-tsgolint": "^0.11.1"
  },
  "lint-staged": {
    "*.{js,ts,mjs,cjs}": "pnpm run lint && pnpm run fmt:check"
  }
}
